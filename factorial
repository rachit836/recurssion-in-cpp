#include <iostream>
using namespace std;
int factorial(int n){
    if(n==0){
        return 1;
    }
    else{
        return n*factorial(n-1);
    }
}
int main() {
    int n;
    cout << "Enter Number to find factorial: ";
    cin >> n;
    cout << "Factorial is " << factorial(n);
    return 0;
}
